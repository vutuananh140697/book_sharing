                    <p>Reviews: <b><%= user.reviews.count %></b></p>
                    <p>Likes: <strong><%= user.count_getted_like %></strong></p>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
          <div class="headline-link">
            <a href="#" class="icon arrow1"></a>
          </div>
        </div>  
      </div>
    </div>
  </div>
</div>
