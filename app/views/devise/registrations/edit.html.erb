<div class="row">
  <div class="col-sm-6 col-sm-offset-3 login-form">
    <h2>Edit profile</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
    
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    
      <div class="form-group pmd-textfield">
        <label for="regular1" class="control-label">
          Username
        </label>
        <%= f.text_field :username, autofocus: true, id:"regular1", class:"form-control"%>
      </div>
      <div class="form-group pmd-textfield">
        <label for="help1">
          Name
        </label>
        <%= f.text_field :name, id:"help1", class:"form-control" %>
      </div>
      
      <!--<div class="form-group pmd-textfield">-->
      <!--  <label for="help1">-->
      <!--    Birth-->
      <!--  </label>-->
      <!--  <= f.text_field :birth, id: "datepicker-realease", class:"form-control" %>-->
      <!--</div>-->
      
      <div class="file-container">
        <%= f.label :image %><br>
        <%= f.file_field :image, class: "upload-image", id: "filePhoto" %>
      </div>
      <img id="previewHolder" class="avatar-preview">
      <img id="old-avatar" class="avatar-preview" src="<%= current_user.try :avatar %>">
      <br>

      
      <!-- Password Input -->
      <div class="form-group pmd-textfield">
        <label for="password1" class="control-label">
          New Password
        </label>
        <% if @minimum_password_length %>
          <i>(<small><%= @minimum_password_length %> characters minimum</small>)</i>
        <% end %>
        <%= f.password_field :password, id:"password1", class:"form-control"%>
      </div>
      <div class="form-group pmd-textfield">
        <label for="password1" class="control-label">
          Password Confirmation
        </label>
        <%= f.password_field :password_confirmation, autocomplete: "off",id:"password1",class:"form-control" %>
      </div>
      <div class="form-group pmd-textfield">
        <label for="password1" class="control-label">
          Current Password
        </label>
        <%= f.password_field :current_password, autocomplete: "off",id:"password1",class:"form-control" %>
      </div>
    
      <div class="actions text-right">
        <%= f.submit "Update", class: "btn btn-success pmd-btn-raised pmd-ripple-effect" %>
        <%= link_to "Back", :back, class: "btn btn-default pmd-btn-raised pmd-ripple-effect" %>
      </div>
    <% end %>
  </div>
</div>
