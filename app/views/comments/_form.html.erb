<div class="posts">
  <div class="textarea-wrapper--top-level">
    <%= form_for [review, comment], method: :post, class: "reply" do |f| %>
      <%= f.hidden_field :review_id, value: review.id, id: "review-id" %>
      <%= f.hidden_field :user_id, value: current_user.id, id: "user-id" %>
      <div class="postbox">
        <div class="avatar">
          <%= link_to user_path(current_user), target: "_blank", class: "user",
            "data-turbolinks": false do %>
            <img src="<%= current_user.image %>" alt="Avatar">
          <% end %>
        </div>
        <div class="textarea-wrapper">
          <%= f.text_area :content, class: "textarea text-content",
            placeholder: t(".content") %>
        </div>
      </div><br>
      <div class="pull-right">
        <button class="btn btn-primary create-comment"><%= t(".submit") %></button>
      </div>
  <% end %>
  </div><br><br>
</div>
